<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aydin.firebasedemo.WelcomeController">
    <children>
        <Label text="Firebase Demo App">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label text="Please register or sign in." />
        <TextField fx:id="emailField" maxWidth="300.0" promptText="Email" />
        <PasswordField fx:id="passwordField" maxWidth="300.0" promptText="Password" />
        <Button fx:id="registerButton" onAction="#registerButtonClicked" text="Register" />
        <Button fx:id="signInButton" onAction="#signInButtonClicked" text="Sign In" />
        <Label fx:id="statusLabel" textFill="RED" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>